<script defer src="/scripts/checkout.js"></script>

<form class="checkout-form">
    <h1 class="checkout-form__title">Checkout</h1>
    <div class="checkout-form-group">
        <label for="first-name" class="checkout-form__label">First Name</label>
        <input type="text" class="checkout-form__input" id="first-name" name="first_name">
    </div>
    <div class="checkout-form-group">
        <label for="last-name" class="checkout-form__label">Last Name</label>
        <input type="text" class="checkout-form__input" id="last-name" name="last_name">
    </div>
    <div class="checkout-form-group">
        <label for="email" class="checkout-form__label">Email</label>
        <input type="email" class="checkout-form__input" id="email" name="email">
    </div>
    <div id="card-element"><!-- Elements will create input elements here --></div>
    <!-- We'll put the error messages in this element -->
    <div id="card-errors" class="card-errors error" role="alert"></div>
    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
    <button type="submit" id="submit" class="checkout-form__submit">Pay</button>

    <p class="result-message hidden"></p>
</form>